#if !defined(__cplusplus)
#error This is a C++ only header file
#endif /* defined(__cplusplus) */

namespace std {

/*******************************************************************************
 *
 ******************************************************************************/
template<typename T>
const T &
min(const T &p_val1, const T &p_val2) {
    return (p_val1 < p_val2) ? p_val1 : p_val2;
}

/*******************************************************************************
 *
 ******************************************************************************/
template <typename T>
const T &
max (const T &p_val1, const T &p_val2) {
    return (p_val1 > p_val2) ? p_val1 : p_val2;
}

/*******************************************************************************
 *
 ******************************************************************************/
template<typename T>
void
swap(T &a, T &b) {
    T c;
    
    c = a;
    a = b;
    b = c;
}

/*******************************************************************************
 *
 ******************************************************************************/
template <class IteratorT>
IteratorT
max_element(const IteratorT p_begin, const IteratorT p_end) 
{
    IteratorT max = p_begin;
    for (IteratorT current = p_begin; current != p_end; current++) {
        if (*current > *max) {
            max = current;
        }
    }

    return max;
}

/*******************************************************************************
 *
 ******************************************************************************/
template <class IteratorT>
IteratorT
min_element(const IteratorT p_begin, const IteratorT p_end) 
{
    IteratorT min = p_begin;
    for (IteratorT current = p_begin; current != p_end; current++) {
        if (*current < *min) {
            min = current;
        }
    }

    return min;
}

} /* namespace std */

#endif /* _ALGORITHM_9d0aeb1a_b737_480d_bd35_3ec6e0f90ce0 */
